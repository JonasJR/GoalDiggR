<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/forgotPassView"
    android:background="#b2454545">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextForgotPassEmail"
        android:layout_gravity="center_horizontal"
        android:hint="email"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#FFF3CF29" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Recovery Email"
        android:id="@+id/sendRecoveryEmailButton"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/editTextForgotPassEmail"
        android:layout_centerHorizontal="true"
        android:background="#FFF3CF29" />
</RelativeLayout>