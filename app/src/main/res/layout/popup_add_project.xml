<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/addProjectView"
    android:rowCount="3"
    android:columnCount="1"
    android:background="#b2454545">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextAddProject"
        android:layout_gravity="center_horizontal"
        android:hint="project"
        android:backgroundTint="#FFF3CF29"
        android:layout_row="0"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelString"
        android:id="@+id/buttonCancel"
        android:background="#FFF3CF29"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_below="@+id/editTextAddProject"
        android:layout_toRightOf="@+id/buttonAddProjectPopup"
        android:layout_toEndOf="@+id/buttonAddProjectPopup"
        android:layout_marginLeft="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addProjectString"
        android:id="@+id/buttonAddProjectPopup"
        android:layout_gravity="center_horizontal"
        android:background="#FFF3CF29"
        android:layout_row="2"
        android:layout_below="@+id/editTextAddProject"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>