<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="fill_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/projekt_top_button_string"
        android:theme="@style/Widget.AppCompat.Light.ActionButton.Overflow"
        style="@style/AppTheme"
        android:id="@+id/mainFragmentButton"
        android:layout_row="0"
        android:layout_column="0"
        android:textStyle="bold"
        android:background="@drawable/coolbutton"
        android:layout_gravity="top"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/fragmentSpinner"
        android:layout_toStartOf="@+id/fragmentSpinner"
        android:layout_alignBottom="@+id/fragmentSpinner" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/fragmentSpinner"
        android:layout_alignParentTop="true"
        android:spinnerMode="dropdown"
        android:background="@drawable/coolbutton"
        android:layout_alignParentEnd="true"
        android:transitionGroup="false"
        android:paddingLeft="10dp" />

</RelativeLayout>